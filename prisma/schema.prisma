model users {
  id        String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String
  password  String? @db.VarChar(200)
  email     String? @db.VarChar(255)
  image_url String? @db.VarChar(200)
  todos     todos[]
}
